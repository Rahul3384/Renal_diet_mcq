<body>
  <header>
     Renal Diet IQ Challenge üçõüß†
  </header>
  <div class="question-box">
    <div class="question" id="question">Loading question...</div>
    <div class="options" id="options"></div>
    <div class="result" id="result"></div>
  </div>

  <script>
    const quizData = [
      {
        question: "Which of these is a kidney-safe breakfast?",
        options: ["Puttu with Kadala curry", "Idiyappam with coconut milk", "Appam with egg curry", "Puttu with ripe banana"],
        answer: "Idiyappam with coconut milk"
      },
      {
        question: "Which fruit commonly eaten should be avoided in CKD?",
        options: ["Banana", "Papaya", "Apple", "Pineapple"],
        answer: "Banana"
      },
      {
        question: "Which dish is lowest in sodium?",
        options: ["Avial", "Sambar", "Pickle", "Fish curry"],
        answer: "Avial"
      },
      {
        question: "Which of these spices is safe and can replace salt in renal diet?",
        options: ["Hing (Kayam)", "Mustard", "Salted lime", "Fish masala"],
        answer: "Hing (Kayam)"
      },
      {
        question: "Which is the best protein option for CKD from below  diet?",
        options: ["Beef fry", "Boiled egg white", "Duck roast", "Chicken curry"],
        answer: "Boiled egg white"
      }
    ];

    let current = 0;

    function loadQuestion() {
      const q = quizData[current];
      document.getElementById("question").innerText = q.question;
      const optionsDiv = document.getElementById("options");
      const resultDiv = document.getElementById("result");
      resultDiv.innerText = "";
      optionsDiv.innerHTML = "";

      q.options.forEach(option => {
        const btn = document.createElement("button");
        btn.innerText = option;
        btn.onclick = () => {
          if (option === q.answer) {
            resultDiv.innerText = "‚úÖ Correct!";
            resultDiv.style.color = "green";
          } else {
            resultDiv.innerText = `‚ùå Wrong! Correct: ${q.answer}`;
            resultDiv.style.color = "red";
          }
          setTimeout(() => {
            current = (current + 1) % quizData.length;
            loadQuestion();
          }, 1500);
        };
        optionsDiv.appendChild(btn);
      });
    }

    window.onload = loadQuestion;
  </script>
</body>
</html>
